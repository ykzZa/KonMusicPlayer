<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.KonMusicPlayer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/blue_icon"
        android:fontFamily="@font/montserrat_regular"
        android:text="Add playlist"/>

    <EditText
        android:id="@+id/text_input_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:hint="Playlist name"/>

    <EditText
        android:id="@+id/text_input_playlist_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:hint="Playlist description"/>
</LinearLayout>