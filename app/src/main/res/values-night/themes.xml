<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KonMusicPlayer" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/blue_icon</item>
        <item name="colorPrimaryDark">@color/light_blue_icon</item>
        <item name="colorAccent">@color/light_blue_icon</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_2</item>
        <item name="postSplashScreenTheme">@style/Theme.KonMusicPlayer</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>